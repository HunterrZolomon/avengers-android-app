<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBeluga"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/beluga"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beluga"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imgBeluga"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/txtNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hero/Pikachu"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgBeluga"
        android:layout_below="@id/txtName"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pikachu@beluga.com"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgBeluga"
        android:layout_below="@id/txtNickname"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:layout_below="@id/imgBeluga"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>